mixin carousell(nscCarousel)
    each item in nscCarousel
        - var idCaroussel = item.IDCaroussel
        .carousel.slide(data-ride='carousel', id= idCaroussel)
            ol.carousel-indicators
                - var i = 0
                each subItem in item.nscslide
                    if  i == 0
                        li.active(data-target= idCaroussel, data-slide-to= '#{i}')
                    else
                        li(data-target= idCaroussel, data-slide-to= '#{i}')
                    - i++
            .carousel-inner(role='listbox')
                each imgItem in item.nscslide
                    -var itemCmass = {'class': imgItem.itemactive }
                    .item()&attributes(itemCmass)
                        -var linkContent = {'href': imgItem.hrefImg }
                            a(data-lightbox="roadtrip")&attributes(linkContent)
                                -var imgContent = {'src': imgItem.srcImg, 'alt': imgItem.alt }
                                img()&attributes(imgContent)
                                .carousel-caption
                                    | #{imgItem.caption}
            a.left.carousel-control(href= '#'+idCaroussel , role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                span.sr-only Previous
            a.right.carousel-control(href= '#'+idCaroussel, role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                span.sr-only Next


